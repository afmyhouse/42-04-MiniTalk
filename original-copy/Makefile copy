CC			= gcc
CFLAGS		= -Wall -Wextra -Werror -g

BIN			:= bin
SRC			:= src
INCLUDE		:= inc
LIBRARIES	:= lib

SRCS		:= $(wildcard $(SRC)/*.c)

EXECUTABLE	:= main

OBJS		= $(SRCS:.c=.o)

INPUT1 = teste
INPUT2 = 6

all: $(BIN)/$(EXECUTABLE) clean

$(BIN)/$(EXECUTABLE): $(OBJS)
	@echo Compilingâ€¦
	@$(CC) $(CFLAGS) $^ -o $@
#	@$(CC) $(CFLAGS) -I$(INCLUDE) $^ -o $@ $(LIBRARIES)

run: fclean all
	clear
	@echo Clear screen...
	@echo Runing...
#	@$(BIN)/$(EXECUTABLE)
	@$(BIN)/$(EXECUTABLE) "$(INPUT1)" "$(INPUT2)"

clean:
	@echo Cleaning Objs...
	@rm -f $(OBJS)

fclean: clean
	@echo Cleaning Executable...
	@rm -f $(BIN)/$(EXECUTABLE)

.PHONY: all clean run fclean